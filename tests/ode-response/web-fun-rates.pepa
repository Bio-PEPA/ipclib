r_browse     = 0.9 ;
r_buy        = 0.1 ;
r_getPage    = 5.0 ;
r_getConfirm = 5.0 ;

r_sendPage    = 35.0 ;
r_sendConfirm = 3 ;

users           = 1000 ;
servers         = 10 ;

User        = (browse, r_browse) . Browsing
            + (buy, r_buy) . Buying
            ;
Browsing    = (getPage, r_getPage) . User ;
Buying      = (getConfirm, r_getConfirm) . User ;
Server      = (getPage, if Browsing > Buying then 2 * r_sendPage else r_sendPage) . Server
            + (getConfirm, if Buying > Browsing then 2 * r_sendConfirm else r_sendConfirm) . Server
            ;

Server[servers] <getPage, getConfirm> (User[users])
