Experiment ?trule [ Transform (P[?m] <?a> Q[?n] ==> P[?m] <?a> Q[?n])
                  , Transform (P[?m] <?a> Q[?n] ==> P[?m - 1] <?a> Q[?n + 1])
                  , Transform (P[?m] <?a> Q[?n] ==> P[?m - 2] <?a> Q[?n + 2])
                  ]
                  ModelTransform ?trule
                                  Model ( r = 1.0 ;
                                          m = 4   ;
                                          n = 4   ;
                                              
                                          P = (a, r) . (b, r) . P ;

                                          Q = (c, r) . (d ,r) . Q ;

                                          P[m] || Q[n]  
                                        )
